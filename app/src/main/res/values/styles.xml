<resources>

    <style name="Widget.Theme.HelixiosWall.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Widget.Theme.HelixiosWall.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="SplashScreenTheme" parent="@style/Theme.HelixiosWall.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>