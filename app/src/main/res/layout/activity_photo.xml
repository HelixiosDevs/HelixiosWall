<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.HelixiosWall.NoActionBar"
    >

    <ImageView
        android:id="@+id/photo_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_wall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabCustomSize="76dp"
            android:src="@drawable/wall_icon"
            app:elevation="6dp"
            app:tint="@color/white"
            app:borderWidth="0dp"
            android:layout_gravity="bottom|left"
            android:backgroundTint="@color/red_fab"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabCustomSize="56dp"
            app:elevation="6dp"
            android:src="@drawable/download"
            app:tint="@color/white"
            app:borderWidth="0dp"
            android:backgroundTint="@color/red_fab"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_fave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            app:fabCustomSize="56dp"
            android:src="@drawable/heart"
            app:elevation="6dp"
            app:tint="@color/white"
            app:borderWidth="0dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/red_fab"
            android:layout_marginLeft="5dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:tint="@color/white"
            android:src="@drawable/share"
            app:fabCustomSize="56dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/red_fab"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/creator_photo_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="By Aditya Chaudhary"/>



    </LinearLayout>

</FrameLayout>